{
    "swagger": "2.0",
    "info": {
        "title": "GDG Foz - To Do Code Lab Android",
        "description": "",
        "contact": {
            "name": "GDG Foz",
            "url": "https://github.com/gdgfoz"
        },
        "version": "1.0.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/profile": {
            "get": {
                "tags": [
                    "dashboard"
                ],
                "description": "Informa\u00e7\u00f5es do seu perfil",
                "operationId": "api.profile.index",
                "responses": {
                    "200": {
                        "description": "Lista dados do seu perfil",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "400": {
                        "description": "Erro de requi\u00e7\u00e3o, faltando token auth",
                        "schema": {
                            "$ref": "#/definitions/Error_oAuth"
                        }
                    },
                    "401": {
                        "description": "Unauthorized action."
                    }
                },
                "security": [
                    {
                        "api_oauth": [
                            "read:tasks"
                        ]
                    }
                ]
            }
        },
        "/tasks": {
            "get": {
                "tags": [
                    "dashboard"
                ],
                "description": "Lista todas suas tarefas",
                "operationId": "api.tasks.index",
                "responses": {
                    "200": {
                        "description": "Lista todas as tarefas do seu perfil",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Task"
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de requi\u00e7\u00e3o, faltando token auth",
                        "schema": {
                            "$ref": "#/definitions/Error_oAuth"
                        }
                    },
                    "401": {
                        "description": "Unauthorized action."
                    }
                },
                "security": [
                    {
                        "api_oauth": [
                            "read:tasks"
                        ]
                    }
                ]
            }
        },
        "/tasks/{id}": {
            "get": {
                "tags": [
                    "dashboard"
                ],
                "description": "Exibi detalhe de uma unica tarefa",
                "operationId": "api.tasks.show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id da tarefas",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhe da tarefas",
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/Task"
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de requi\u00e7\u00e3o, faltando token auth",
                        "schema": {
                            "$ref": "#/definitions/Error_oAuth"
                        }
                    },
                    "401": {
                        "description": "Unauthorized action."
                    }
                },
                "security": [
                    {
                        "api_oauth": [
                            "read:tasks"
                        ]
                    }
                ]
            }
        },
        "/tasks/category/{category}": {
            "get": {
                "tags": [
                    "dashboard"
                ],
                "description": "Lista todas suas tarefas relacionadas a uma categoria",
                "operationId": "api.tasks.category",
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "description": "Id da categoria que deseja visualizar as tarefas",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista todas as tarefas do seu perfil",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Task"
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de requi\u00e7\u00e3o, faltando token auth",
                        "schema": {
                            "$ref": "#/definitions/Error_oAuth"
                        }
                    },
                    "401": {
                        "description": "Unauthorized action."
                    },
                    "404": {
                        "description": "Categoria n\u00e3o encontrada."
                    }
                },
                "security": [
                    {
                        "api_oauth": [
                            "read:tasks"
                        ]
                    }
                ]
            }
        },
        "/categories": {
            "get": {
                "tags": [
                    "dashboard"
                ],
                "description": "Lista todas as categories",
                "operationId": "api.categories.index",
                "responses": {
                    "200": {
                        "description": "Lista todas as categorias",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    }
                }
            }
        },
        "/categories/{id}": {
            "get": {
                "tags": [
                    "dashboard"
                ],
                "description": "Detalhe de uma categoria",
                "operationId": "api.categories.show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id da categoria",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhe da categoria",
                        "schema": {
                            "items": {
                                "$ref": "#/definitions/Category"
                            }
                        }
                    },
                    "404": {
                        "description": "Categoria n\u00e3o encontrada."
                    }
                },
                "security": [
                    {
                        "api_oauth": [
                            "read:tasks"
                        ]
                    }
                ]
            }
        }
    },
    "definitions": {
        "Error_oAuth": {
            "properties": {
                "status": {
                    "type": "string",
                    "enum": [
                        "success",
                        "error"
                    ]
                },
                "error": {
                    "type": "string"
                }
            }
        },
        "Task": {
            "required": [
                "categoryId",
                "name"
            ],
            "properties": {
                "categoryId": {
                    "type": "integer",
                    "format": "int32"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "Category": {
            "required": [
                "category",
                "src"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32"
                },
                "category": {
                    "description": "Nome da categoria",
                    "type": "string"
                },
                "color": {
                    "description": "Cor em HEXADECIMAL da categoria",
                    "type": "string"
                },
                "createdAt": {
                    "description": "Data de cria\u00e7\u00e3o",
                    "type": "datetime"
                },
                "updatedAt": {
                    "description": "Data da ultima atualiza\u00e7\u00e3o",
                    "type": "datetime"
                },
                "src": {
                    "description": "URL do caminho absoluto da imagem que representa essa categoria",
                    "type": "string"
                }
            }
        },
        "User": {
            "required": [
                "name"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32"
                },
                "name": {
                    "description": "Seu nome de usuario",
                    "type": "string"
                },
                "createdAt": {
                    "description": "Data de criacao",
                    "type": "datetime"
                }
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "api_key",
            "in": "header"
        },
        "api_oauth": {
            "type": "oauth2",
            "in": "header",
            "flow": "accessCode",
            "authorizationUrl": "http://localhost:8000/api/v1/oauth/dialog",
            "tokenUrl": "http://localhost:8000/api/v1/oauth/access_token",
            "scopes": {
                "read:tasks": "Permitir leitura de suas tarefas.",
                "read:profile": "Informa\u00e7\u00f5es basica do seu perfil (nome, email)"
            }
        }
    }
}